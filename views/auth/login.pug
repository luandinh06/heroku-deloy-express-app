extends ../layouts/header.pug
block header
    h1 Login

    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="/auth/login", method="POST")
        .form-group
            labe(for='email') Email
            input#email.form-control(name="email", type="text", value=value? value.email : '')
        .form-group
            labe(for='password') Password
            input#password.form-control(name="password", type="password", value=value? value.password : '')
        button.btn.btn-primary Login