extends ../layouts/header.pug
block header
    
        h1
            span.mr-3 Users
            a.btn.btn-primary(href='/users/create') New

        form.input-group.mb-3(action="/users/search", method="GET")
            .input-group-prepend
                button.btn.btn-outline-primary Search
            input.form-control(type='text', name='q',placeholder='Search')

        table.table
            tr
                th Avatar  
                th Name
                th Phone
                th Actions
            each user in users
                tr
                    td
                        img(src=user.avatar, width='64')
                    td= user.userName
                    td= user.phone
                    td
                        a.btn.btn-light(href='/users/'+user.id) View
